{
  "compilerOptions": {
    "outDir": "build",
    "declarationDir": "build",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES5",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "build"]
}
